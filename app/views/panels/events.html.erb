<style>
  .gallery-block {
    padding-bottom: 60px;
    padding-top: 60px;
  }

  .gallery-block .heading {
    margin-bottom: 50px;
    text-align: center;
  }

  .gallery-block .heading h2 {
    font-weight: bold;
    font-size: 1.4rem;
    text-transform: uppercase;
  }

  .gallery-block.cards-gallery h6 {
    font-size: 17px;
    font-weight: bold;
  }

  .gallery-block.cards-gallery .card {
    transition: 0.4s ease;
  }

  .gallery-block.cards-gallery .card img {
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.15);
  }

  .gallery-block.cards-gallery .card-body {
    text-align: center;
  }

  .gallery-block.cards-gallery .card-body p {
    font-size: 15px;
  }

  .gallery-block.cards-gallery a {
    color: #212529;
  }

  .gallery-block.cards-gallery a:hover {
    text-decoration: none;
  }

  .gallery-block.cards-gallery .card {
    margin-bottom: 30px;
    box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.15);
  }

  @media (min-width: 576px) {

    .gallery-block .transform-on-hover:hover {
      transform: translateY(-10px) scale(1.02);
      box-shadow: 0px 10px 10px rgba(0, 0, 0, 0.15) !important;
    }
  }
</style>
<main class="page-content pt-2">
  <div class="container-fluid p-5">
    <h2>Wydarzenia</h2>
    <hr>
    <% if @events.count == 0 %>
      <div class="alert alert-warning">
        <strong>W tej chwili nie istnieją żadne wydarzenia.</strong>
      </div>
    <% else %>
      <section class="gallery-block cards-gallery">
        <div class="container">
          <div class="row">
            <% @events.each do |event| %>
              <div class="col-md-6 col-lg-4">
                <div class="card border-0 transform-on-hover">
                  <%= link_to events_path, :class => "lightbox" do %>
                    <%= image_tag(url_for(event.image), :alt => "Event image", :class => "card-img-top") %>
                  <% end %>
                  <div class="card-body">
                    <h6><%= link_to truncate(event.title, length: 35, separator: ' '), events_path %></h6>
                    <p class="text-muted card-text"><%= truncate(strip_tags(event.body.to_s), length: 35, separator: ' ') %></p>
                    <hr>
                    <%= link_to edit_event_path(event) do %>
                      <button class="btn btn-warning btn-sm"><i class="fa fa-edit"></i> Edytuj</button>
                    <% end %>
                    <%= link_to destroy_event_path(event), method: :delete, data: {:confirm => "Are you sure?"} do %>
                      <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Usuń</button>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    <% end %>

    <div class="text-center d-flex flex-column justify-content-center" style="margin:0 35%">
      <button type="button" class="btn btn-warning btn-lg" data-toggle="modal" data-target="#createEventModal">Dodaj
        wydarzenie
      </button>
    </div>
    <%= render :template => 'events/new' %>
  </div>
</main>