$('#loader').modal('hide');
$('#preview-body').html('<%= escape_javascript( render :partial => 'shared/preview', :layout => 'shared/application', locals: { resource: @sub_tab, preview: true} ) %>');
$('#jumbo').css({
    "background": 'url(' + '<%= url_for(@sub_tab.main_tab.image) if @sub_tab.main_tab.image.attached? %>' + ') no-repeat',
    "background-position-y": '45%',
    "background-position-x": "center",
    "background-size": "cover"
});
$('#preview-modal').modal('show');