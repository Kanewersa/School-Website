<article class="index-intro">
  <% if @event.image.attached? %>
    <div class="jumbotron text-outline" style="background: url(<%= url_for(@event.image) %>) no-repeat;
        padding-top: 200px; background-size: cover; background-position-x: center; background-position-y: 45% ">
  <% end %>
  </div>
</article>
<hr/>
<section id="page-section">
  <h1><%= @event.title %></h1>
  <hr class="w-75"/>
  <div class="container">
    <p><%= @event.body %></p>
    <hr>
    <section class="gallery-block grid-gallery">
      <div class="container">
        <div class="row">
          <% @event.gallery_images.each do |image| %>
            <div class="col-md-6 col-lg-4 item">
              <%= link_to image, :class => "lightbox" do %>
                <%= image_tag image, :class => "img-fluid image scale-on-hover" %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
</section>


